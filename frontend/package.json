{
    "name": "fastclinical-desktop",
    "version": "1.0.0",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "react-start": "cd src && npm start",
        "build": "cd src && npm run build",
        "dist": "electron-builder"
    },
    "build": {
        "appId": "com.fastclinical.desktop",
        "files": [
            "**/*",
            "../backend/dist/backend.exe"
        ],
        "win": {
            "target": [
                "nsis",
                "portable"
            ]
        },
        "directories": {
            "output": "release"
        }
    },
    "dependencies": {
        "archiver": "^5.3.1",
        "electron": "^25.0.0",
        "xlsx": "^0.18.5"
    },
    "devDependencies": {
        "concurrently": "^7.0.0"
    }
}